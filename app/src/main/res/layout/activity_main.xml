<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to XO Game"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_marginBottom="100dp"/>

    <EditText
        android:id="@+id/etGridSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Enter grid size"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnCreateGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Grid"
        android:layout_gravity="center_horizontal" />

    <Switch
        android:id="@+id/game_mode_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_with_bot"
        app:layout_constraintTop_toBottomOf="@id/btnCreateGrid"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


</LinearLayout>
